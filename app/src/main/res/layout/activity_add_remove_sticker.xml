<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cesarbetan.android.stickercollector.AddRemoveStickerActivity">

    <View
        android:id="@+id/headerAddRemove"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rectangle"/>

    <View
        android:id="@+id/rectangleSticker"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_below="@+id/headerAddRemove"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/rectangle_sticker" />

    <TextView
        android:id="@+id/stickerSelectedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rectangleSticker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:fontFamily="serif-monospace"
        android:text="#"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="serif-monospace"
        android:text="AÃ±adir/Eliminar"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/addStickerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/rectangleSticker"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_button"
        android:onClick="addSticker"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/removeStickerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addStickerBtn"
        android:layout_alignBottom="@+id/addStickerBtn"
        android:layout_alignEnd="@+id/btn3"
        android:layout_alignRight="@+id/btn3"
        android:background="@drawable/rounded_button"
        android:onClick="removeSticker"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="2"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addStickerBtn"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/btn2"
        android:layout_toStartOf="@+id/btn2"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="1"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn2"
        android:layout_alignBottom="@+id/btn2"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="3"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn1"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="4"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn4"
        android:layout_alignBottom="@+id/btn4"
        android:layout_alignLeft="@+id/btn2"
        android:layout_alignStart="@+id/btn2"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="5"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn5"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="6"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:layout_below="@+id/btn4"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="7"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn7"
        android:layout_alignBottom="@+id/btn7"
        android:layout_alignLeft="@+id/btn5"
        android:layout_alignStart="@+id/btn5"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="8"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn8"
        android:layout_alignBottom="@+id/btn8"
        android:layout_alignLeft="@+id/btn6"
        android:layout_alignStart="@+id/btn6"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="9"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:layout_below="@+id/btn7"
        android:layout_marginTop="15dp"
        android:background="@drawable/circle_button"
        android:onClick="numberSticker"
        android:paddingBottom="14dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="14dp"
        android:text="0"
        android:textColor="#112c5a"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/restartStickerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn0"
        android:layout_alignBottom="@+id/btn0"
        android:layout_alignEnd="@+id/btn9"
        android:layout_alignLeft="@+id/btn8"
        android:layout_alignRight="@+id/btn9"
        android:layout_alignStart="@+id/btn8"
        android:background="@drawable/rounded_button"
        android:onClick="restartSticker"
        android:paddingBottom="10dp"
        android:paddingLeft="42dp"
        android:paddingRight="42dp"
        android:paddingTop="10dp"
        android:text="Limpiar"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</RelativeLayout>
